<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="2dp"
        app:contentPadding="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1.4"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/pdt_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:padding="3dp"
                        android:text="Medium Text"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/pdt_color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/pdt_name"
                        android:gravity="left"
                        android:padding="3dp"
                        android:text="PRODUCT COLOR"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/colorRedt"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/pdt_size"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/pdt_name"
                        android:gravity="left"
                        android:padding="3dp"
                        android:text="PRODUCT Size"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/colorRedt"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/pdt_qty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/pdt_name"
                        android:gravity="left"
                        android:padding="3dp"
                        android:text="PRODUCT Quantity"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/colorRedt"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/prod_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/pdt_name"
                        android:gravity="left"
                        android:padding="3dp"
                        android:text="Rs 1769"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/colorRedt"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/seller_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/pdt_name"
                        android:gravity="left"
                        android:padding="3dp"
                        android:text="Seller Name"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/delv_dtls"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/pdt_name"
                        android:gravity="left"
                        android:padding="3dp"
                        android:visibility="gone"
                        android:text="Delivey details"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/colorRedt"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/pdt_img"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight=".5"
                    android:layout_marginRight="10dp"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/profilepic" />

            </LinearLayout>

            <TextView
                android:id="@+id/remove_pdt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:textSize="16dp"
                android:textAllCaps="false"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:focusableInTouchMode="true"
                android:background="@color/transparet_grey"
                android:textColor="@color/white"
                android:text="@string/remove" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
