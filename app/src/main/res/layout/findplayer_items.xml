<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <LinearLayout
        android:id="@+id/lytfind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:gravity="center"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/propic"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/txttname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="Lavkush mishra"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_marginBottom="5dp"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/bottomrlyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent_dark_blue"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="5"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/imgrequest"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:src="@drawable/acpt_btn_press" />

        <ImageView
            android:id="@+id/imgdecline"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_toRightOf="@+id/imgaccept"
            android:layout_weight="1"
            android:src="@drawable/irlvnt_btn_press" />


        <ImageView
            android:id="@+id/imgblock"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_toRightOf="@+id/imgdecline"
            android:layout_weight="1"
            android:src="@drawable/block_btn_press" />

        <ImageView
            android:id="@+id/imgchat"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/imgblock"
            android:layout_weight="1"
            android:src="@drawable/chat_btn_press" />


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:layout_marginLeft="3dp">

            <ImageView
                android:id="@+id/imgreq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible" />

            <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="#F1011A"/>-->

        </RelativeLayout>
       <!-- <ImageView
            android:id="@+id/imgreq"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/imgblock"
            android:layout_weight="1"
            android:visibility="visible"
            android:src="@drawable/chat_btn_press" />-->
       <!-- <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_above="@+id/imgreq"
            android:textColor="#F1011A"/>-->
    </LinearLayout>


</RelativeLayout>